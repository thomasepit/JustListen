<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="GridViewItem">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="GridViewItemText">
        <item name="android:layout_marginTop">@dimen/space_normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.CardView" parent="CardView">
        <item name="android:layout_marginRight">@dimen/card_margin</item>
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginTop">@dimen/card_margin_half</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_half</item>
    </style>

    <style name="Text" />

    <style name="Text.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.Title.Inverse">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">@dimen/space_normal</item>
        <item name="tabPaddingEnd">@dimen/space_normal</item>
        <item name="tabBackground">@drawable/tab_btn_primary</item>
        <item name="android:background">@color/windowBackgroundColor</item>
    </style>

    <style name="AppTheme.Pro" parent="AppTheme">
        <item name="colorPrimary">@color/pro_colorPrimary</item>
        <item name="colorPrimaryDark">@color/pro_colorPrimaryDark</item>
        <item name="colorAccent">@color/pro_colorAccent</item>
        <item name="colorControlActivated">@color/pro_colorControlActivated</item>
        <item name="colorControlHighlight">@color/pro_colorControlHighlight</item>
    </style>

    <style name="AppTheme.Sos" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sos_colorPrimary</item>
        <item name="colorPrimaryDark">@color/sos_colorPrimaryDark</item>
        <item name="colorAccent">@color/sos_colorAccent</item>
    </style>

    <style name="Widget"/>

    <style name="Widget.ListView">
        <item name="android:divider">@drawable/list_view_item_divider</item>
        <item name="android:dividerHeight">1sp</item>
    </style>

    <style name="Widget.ListItem">
        <item name="android:paddingRight">@dimen/space_normal</item>
        <item name="android:paddingLeft">@dimen/space_normal</item>
        <item name="android:minHeight">@dimen/row_min_height</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="AudioTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorAudioPrimary</item>
        <item name="colorPrimaryDark">@color/colorAudioPrimaryDark</item>
        <item name="colorAccent">@color/colorAudioAccent</item>
    </style>

</resources>